{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist", 
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,

    "paths": {
      "config/*": ["src/config/*"],
      "router/*": ["src/router/*"],
      "service/*": ["src/service/*"],
      "repository/*": ["src/repository/*"],
      "model/*": ["src/model/*"],
      "middleware/*": ["src/middleware/*"],
      "view/*": ["src/view/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
