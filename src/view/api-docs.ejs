<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>doc</title>
  <!-- link CDN Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
</head>
<body class="w-100 d-flex align-items-center flex-column bg-light pt-5 pr-5 pl-5">
    <header style="width: 45%; text-align: center;">
        <h1 class="text-primary">API DOCUMENTATION</h1>
        <hr>
    </header>
  
    <section class="pt-5" style="max-width: 50vw;">
        <% data.forEach((item) => { %>
            <div class="mb-5">
              <h3><%= item.prefix %></h3>
              <p style="color: #55595e;"><%= item.description %></p>
          
              <ul>
                <% for (let route in item.api) { 
                  const api = item.api[route]; 
                  %>
                    <li>
                      <strong><%= api.method %></strong> - 
                      <a href="<%= route %>" style="text-decoration: none; color: #bd68ba;"><%= route %></a>: 
                      <%= api.description %>
                  
                      <% if (api.addition) { %>
                        <ul>
                          <% for (let key in api.addition) { %>
                            <li><strong><%= key %>:</strong> <%= api.addition[key] %></li>
                          <% } %>
                        </ul>
                      <% } %>
                    </li>
                  <% } %>
              </ul>
            </div>
        <% }) %>          
    </section>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"
  ></script>
</body>
</html>
